
<h2>Create a new assembly for database : <%= params['instance'] %> / <%= params['organism'] %> </h2>

<% form_for :assembly, :url => {:controller => :assemblies, 
                                :action => :create, 
                                :method => :post, 
                                :instance => params['instance'], 
                                :organism => params['organism']} do |f| %>
  <%= f.error_messages %>

  <br />

  <table bgcolor='lightyellow' cellspacing="20">

    <tr>
      <td align="left">
        <%= f.label :assembly_name %>:
      </td>
      <td align="right">
        <%= f.text_field :name %>
      </td>
    </tr>

    <tr>
      <td align="left">
        <%= f.label :chromosome %>:
      </td>
      <td align="left">
        <%= f.text_field :chromosome, :size => 3 %>
      </td>
    </tr>

    <tr>
      <td align="left">
        <%= f.label :approximate_size %>:
      </td>
      <td align="left">
        <%= f.text_field :size, :size => 8 %>
      </td>
    </tr>

    <tr>
      <td align="left">
        <%= f.label :comment %>:
      </td>
      <td align="right">
        <%= f.text_field :comment %>
      </td>
    </tr>

    <tr>
      <td align="left">
        <%= f.label :origin %>:
      </td>
      <td align="right">
        <%= f.text_field :origin, :size => 30, :value => 'The Sanger Institute' %>
      </td>
    </tr>

  </table>

  <br />

  <table cellspacing="20">

  <tr><td align="left" bgcolor='orange'> <%= f.submit 'Add this assembly' %> </td></tr>

  </table>

<% end %>

  <table cellspacing="20">
  <tr><td align="left" bgcolor='lightblue'>
  <%= link_to 'Go back to assembly overview', :instance => params[:instance], 
                                              :organism => params[:organism], 
                                              :action => 'index' %>
  </td></tr>
  </table>
