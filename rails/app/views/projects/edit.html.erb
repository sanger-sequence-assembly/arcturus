
<h2>Edit project <%= @project.name %> for database : <%= params['instance'] %> / <%= params['organism'] %> </h2>

<% form_for(:project,  :url => {:controller => :projects,
                                :action => :update,
                                :id => @project,
                                :instance => params['instance'],
                                :organism => params['organism']},
                       :html => { :method => :put}
            ) do |f| %>
  <%= f.error_messages %>

  <table cellspacing="3">

    <tr>
      <td align="left">
        <%= f.label :project_name %>:
      </td>
      <td align="left">
        <%= f.text_field :name, :value => @project.name, :size => 16 %>
      </td>
    </tr>

    <tr>
      <td align="left">
        <%= f.label :assembly, "Assembly" %>:
      </td>
      <td align="left">
        <%= f.collection_select(:assembly_id, @assemblies, :assembly_id, :name) %>
      </td>
    </tr>


    <tr>
      <td align="left">
        <%= f.label :owner %>:
      </td>
      <td align="left">
        <%= f.collection_select(:owner, @users, :id, :full_name, {:prompt => true}) %>
      </td>
    </tr>

    <tr>
      <td align="left">
        <%= f.label :status %>:
      </td>
     <td align="left">
        <%= f.collection_select(:status, @status, :to_s, :to_s ) %>
      </td>
    </tr>

    <tr>
      <td align="left">
        <%= f.label :directory %>:
      </td>
      <td align="left">
        <%= f.text_field(:directory, :value => @project.directory, :size => 80, :maxlength => 256) %>
      </td>
    </tr>

    <tr>
      <td align="left">
        <%= f.label :comment %>:
      </td>
      <td align="right">
        <%= f.text_field :comment, :value => @project.comment, :size => 80, :maxlength => 256 %>
      </td>
    </tr>

  </table>

  <br />

  <%= f.submit 'Update' %> 

<% end %>

<hr />

<%= link_to 'Back to project overview', :instance => params[:instance],
                                        :organism => params[:organism],
                                        :action => 'index' %>


