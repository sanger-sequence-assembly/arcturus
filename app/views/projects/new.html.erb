<h2>Create a new project for 
    <% if params['assembly'] then 
       assembly = params['assembly']
       acurrent = @assemblies_hash[assembly.to_i] 
     %>
       assembly <%=h acurrent %>
    <%end %>
    <%=h params['instance'] %> / <%=h params['organism'] %>
</h2>


<% if @currentprojects then %>
    <table cellpadding=10>
    <tr><th align='left'>Existing projects</th><th align='left'>name</th><th>assembly</th></tr>
    <% @currentprojects.each do |p| %>
    <tr><td>&nbsp</td><td><%=h p.name %></td><td> <%=h @assemblies_hash[p.assembly_id] %></td></tr>
    <% end %>
    </table>
<% else %>
    <h4>There are currently no projects defined 
       <% if params['assembly'] then %> for assembly <%=h acurrent %>
       <% end %>
    </h4>
<% end %>

<br />

<table cellpadding=10>
  <tr>
     <th> Define a  new project :</th>
  </tr>
</table>

<% form_for :project, :url => {:controller => :projects, 
                               :method => :post, 
                               :action => :create,
                               :instance => params['instance'],
                               :organism => params['organism']} do |f| %>
  <%= f.error_messages %>


  <table bgcolor='lightyellow' cellspacing="20">

    <tr>
      <td align="left">
        <%= f.label :project_name %>:
      </td>
      <td align="left">
        <%= f.text_field :name %>
      </td>
    </tr>


    <% if params['assembly'] then %>
        <%= f.hidden_field(:assembly, :value => params['assembly']) %> 
    <% else %>

      <tr>
        <td>
          <%= f.label :assembly, "Assembly" %>:
        </td>
        <td>
           <%= f.collection_select(:assembly_id, @assemblies, :assembly_id, :name) %>
        </td>
      </tr>
    <% end  %>


    <tr>
      <td align="left">
        <%= f.label :owner %>:
      </td>
      <td align="left">
        <%= f.text_field :owner, :size => 4 %>
      </td>
    </tr>


    <tr>
      <td align="left">
        <%= f.label :gap4_directory %>:
      </td>
      <td align="left">
        <%= f.text_field :directory, :size => 32, :maxlength => 256 %>
      </td>
    </tr>


    <tr>
      <td align="left">
        <%= f.label :comment %>:
      </td>
      <td align="right">
        <%= f.text_field :comment, :size => 32, :maxlength => 256 %>
      </td>
    </tr>

  </table>

  <br />

  <table cellspacing="20">

  <tr><td align="left" bgcolor='orange'> <%= f.submit 'Create this project' %> </td></tr>

  </table>

<% end %>

  <table cellspacing="20">
  <tr><td align="left" bgcolor='lightblue'>
  <%= link_to 'Go back to project overview', :instance => params[:instance],
                                              :organism => params[:organism],
                                              :action => 'index' %>
  </td></tr>
  </table>


  </table>

