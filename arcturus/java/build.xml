<?xml version="1.0"?>

<!-- build.xml - a simple Ant buildfile -->
<project name="Simple Buildfile" default="compile" basedir=".">
  <property name="project.name" value="arcturus"/>
  <property name="package.prefix" value="uk.ac.sanger"/>

  <!-- The directory containing source code -->
  <property name="src.dir" value="src"/>

  <!-- The directory containing the test classes -->
  <property name="testsrc.dir" value="test"/>

  <!-- Temporary build directories -->
  <property name="build.dir" value="build"/>
  <property name="build.classes" value="${build.dir}/classes"/>
  <property name="build.lib" value="${build.dir}/lib"/>

  <!-- Documents directory -->
  <property name="javadoc.dir" value="${build.dir}/docs"/>

  <!-- Resources directory -->
  <property name="resources.dir" value="${src.dir}/resources" />

  <!-- Target version of Java -->
  <property name="build.target" value="1.4" />

  <!-- Target to create the build directories prior to the -->
  <!-- compile target. -->
  <target name="prepare">
    <mkdir dir="${build.dir}"/>
    <mkdir dir="${build.classes}"/>
    <mkdir dir="${build.lib}"/>
    <mkdir dir="${javadoc.dir}"/>
  </target>

  <target name="clean" description="Remove all generated files.">
    <delete dir="${build.dir}"/>
  </target>

  <target name="compile" depends="prepare"
          description="Compiles all source code.">
    <javac srcdir="${src.dir}" destdir="${build.classes}" 
           source="${build.target}"
           target="${build.target}"
	   debug="true"/>
  </target>

  <target name="jar" depends="compile"
          description="Generates the JAR file.">
    <jar jarfile="${project.name}.jar"
         manifest="${src.dir}/MANIFEST.MF">
        <fileset dir="${build.classes}" />
	<fileset dir="${src.dir}" includes="resources/icons/*.*,resources/images/*.*,resources/*.props"/>
    </jar>
  </target>

  <target name="all" depends="clean,jar"
          description="Cleans, compiles, then builds the JAR file."/>

  <target name="docs" depends="prepare"
          description="Generates Javadoc documentation">
    <javadoc sourcepath="${src.dir}" destdir="${javadoc.dir}"
             author="yes"
	     version="yes"
	     public="yes"
	     private="no"
	     protected="no"
	     package="no"
             packagenames="${package.prefix}.${project.name}.*,${package.prefix}.${project.name}.*.*"/>
  </target>
</project>
