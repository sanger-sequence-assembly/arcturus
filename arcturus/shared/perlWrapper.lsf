#!/bin/csh -f

set SCRIPT_HOME=`dirname $0`
set SCRIPT_NAME=`basename $0`

set SCRIPT_NAME=$SCRIPT_NAME:r

set PERL_SCRIPT_NAME=${SCRIPT_HOME}/${SCRIPT_NAME}.pl

set PERL_LIB_DIR=${SCRIPT_HOME}/../lib

if ( $?PERL5LIB ) then
  setenv PERL5LIB ${PERL_LIB_DIR}:${PERL5LIB}
else
  setenv PERL5LIB ${PERL_LIB_DIR}
endif

if ( -x ${PERL_SCRIPT_NAME} ) then
    lsrun -l -v -R 'mem>8000' ${PERL_SCRIPT_NAME} $*
else
    echo Error: ${PERL_SCRIPT_NAME} is not a valid command
endif
